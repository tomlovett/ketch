<div class="layout-column">
  <div class="white flex-10 layout-row layout-align-space-between-center">
    <span class="flex-5"></span>

    <span class="flex">
      <h1>{{model.player.handle}}</h1>
    </span>

    {{#paper-button class="flex-10" raised=true warn=true onClick=(action "logout")}}
      Logout
    {{/paper-button}}
  </div>

  <div class="layout-row layout-align-space-around-center flex-5">
    {{#paper-button class="white flex-25"}}
      {{#link-to 'user.teams'}}Teams{{/link-to}}
    {{/paper-button}}

    {{#paper-button class="white flex-25"}}
      {{#link-to 'user.player'}}Edit{{/link-to}}
    {{/paper-button}}
  </div>

  {{outlet}}
</div>

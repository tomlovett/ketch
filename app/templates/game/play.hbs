{{#if wePulled}}
  <span class="pulling we-pulled round-edges white" {{action toggleProperty 'wePulled'}}>Pulling</span>
{{else}}
  <span class="pulling they-pulled round-edges white" {{action toggleProperty 'wePulled'}}>Pulling</span>
{{/if}}

<div class="flex-10 layout-row">
  {{#if inPlay}}
    {{#paper-button onClick=(action 'recordScore' true) class="green flex-50"}}
      We scored!
    {{/paper-button}}

    {{#paper-button onClick=(action 'recordScore' false) class="red flex-50"}}
      They scored...
    {{/paper-button}}
  {{else}}
    {{#paper-button onClick=(action toggleProperty 'inPlay') class="white flex"}}
      Done Subs
    {{/paper-button}}
  {{/if}}
</div>

<div class="players layout-row flex">
  <span class="flex-5"></span>

  {{#if inPlay}}
    {{game/field-stats
        class="flex-45"
        clickStat=(action 'clickStat')
        resetLine=(action toggleProperty 'inPlay')
    }}
  {{else}}
    {{game/player-list
        players=benchMen
        clickPlayer=(action 'clickPlayer')
        class="flex-25"
        playerClass=team.primary
    }}
    {{game/player-list
        players=benchWomen
        clickPlayer=(action 'clickPlayer')
        class="flex-25"
        playerClass=team.secondary
    }}
  {{/if}}

  <span class="flex"></span>

  <div class="flex-25">
    {{game/player-list
        players=fieldWomen
        clickPlayer=(action 'clickPlayer')
        playerClass=team.secondary
    }}
    {{game/player-list
        players=fieldMen
        clickPlayer=(action 'clickPlayer')
        playerClass=team.primary
    }}

    {{#unless inPlay}}
      {{#paper-button class="flex-5 white" onClick=(action 'clearLine')}}
        Clear line
      {{/paper-button}}
    {{/unless}}
  </div>


  <span class="flex-5"></span>
</div>
